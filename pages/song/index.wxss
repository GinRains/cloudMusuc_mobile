.songContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}

.songContainer .keng {
  position: relative;
  z-index: 99;
  width: 60rpx; height: 60rpx;
  background-color: #eee;
  border-radius: 50%;
}

.songContainer .needle {
  position: relative;
  left: 58rpx; top: -36rpx;
  z-index: 3;
  width: 192rpx; height: 274rpx;
  transform-origin: 40rpx 0 ;
  transform: rotateZ(-20deg);
  transition: transform 1s linear;
}

.songContainer.active .needle {
  transform: rotateZ(0)
}

.songContainer .main {
  position: relative;
  top: -183rpx;
  width: 598rpx; height: 598rpx;
  animation: play 4s linear infinite 1s;
  animation-play-state: paused;
}

.songContainer.active .main {
  animation: play 4s linear infinite 1s;
  animation-play-state: running;
}

@keyframes play {
  from {
    transform: rotateZ(0)
  }
  to {
    transform: rotateZ(360deg)
  }
}

.songContainer .main .disc {
  position: relative;
  z-index: 2;
  width: 100%; height: 100%;
}

.songContainer .main .discImg {
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  margin: auto;
  width: 370rpx; height: 370rpx;
}

/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}

.audioContainer{
  position: absolute;
  bottom:200rpx;
  display:flex;
  width:640rpx;
  height:80rpx;
  line-height:80rpx;
}

.audioContainer .barContainer{
  width:450rpx;
  height:4rpx;
  background:rgba(0, 0, 0, 0.4);
  margin:auto;
}

.audioContainer .barContainer .audio-current-time{
  position: relative;
  width:50%;
  height:4rpx;
  background:red;
}

.audioContainer .barContainer .audio-current-time .audio-time-point{
  position: absolute;
  top:-4rpx;
  right:-6rpx;
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background:white;
}